<h1 class="title">Burger Time</h1>

<img src="assets/img/burger1.jpg" ;>


<div class="row">
  <div class="col-sm-6">
    <h2>Burgers to be eaten:</h2>

    <ul>
      {{#each burger}}
      {{#unless devoured}}
      {{>burgers/burger-block devour=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-6">
    <h2>Burgers that have been eaten:</h2>

    <ul>
      {{#each burger}}
      {{#if devoured}}
      {{>burgers/burger-block devour=true}}
      {{/if}}
      {{/each}}
    </ul>

  </div>

</div>

<div class="add-burger">

  <form class="create-form">
    <h2>Add a burger</h2>
    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="eaten">Eaten</label><br>
      <input type="radio" name="eaten" value="1" checked> Eaten<br>
      <input type="radio" name="eaten" value="0"> Not Eaten
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>